<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/deal_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:background="@color/colorAccent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/expiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right|top"
                android:layout_margin="5dp"
                android:background="@drawable/expiration_date_drawable"
                android:gravity="center"
                android:padding="3dp"
                android:text="Expire : 2015/12/12"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|top"
                android:layout_margin="5dp"
                android:background="@drawable/online_deal_drawable"
                android:gravity="center"
                android:padding="3dp"
                android:text="Category"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="#88000000"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/deal_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.8"
                    android:ellipsize="end"
                    android:text="Hello thsi is the text to test the deals ddadma mldma dmadma dmadma dmakdmakdm akdmada"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/circular_textview"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/current_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="current"
                        android:textColor="@android:color/black"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/previous_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:text="previous"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>